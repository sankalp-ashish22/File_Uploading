<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/css/style.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
  <style>
    .error-message {
      color: red;
      font-size: 16px;
      margin-bottom: 20px;
    }

    .loader-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }

    .loader {
      border: 4px solid transparent;
      border-top: 4px solid #3498db;
      border-bottom: 4px solid #ffffff;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    body.loading .loader-container {
      opacity: 1;
      pointer-events: auto;
    }
    .register-forget {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
    }

    .register-forget a {
      text-align: center;
      text-decoration: none;
      /* color: #ff1010; */
      /* font-weight: bold; */
    }
  </style>
</head>

<body class="loading">
  <div class="loader-container">
    <div class="loader"></div>
  </div>
  <section class="container">
    <div class="login-container">
      <div class="circle circle-one"></div>
      <div class="form-container">
        <img src="https://raw.githubusercontent.com/hicodersofficial/glassmorphism-login-form/master/assets/illustration.png" alt="illustration" class="illustration" />
        <h1 class="opacity1">CREATE ACCOUNT</h1>

        <form action="/user/signup" method="post">
          <div class="mt-2">
            <div class="mb-3">
              <input type="text" id="fullName" name="fullName" aria-describedby="fullName" placeholder="Name" />
            </div>
            <div class="mb-3">
              <input type="email" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email" />
            </div>
            <div class="mb-3">
              <input type="password" name="password" id="exampleInputPassword1" placeholder="Password" />
            </div>
            <% if (error) { %>
            <div class="error-message">
              <%= error %>
            </div>
            <% } %>
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
        <div class="register-forget opacity">
          <a href="/user/signin">SIGN IN</a>
          <!-- <a href="">FORGOT PASSWORD</a> -->
        </div>
      </div>
      <div class="circle circle-two"></div>
    </div>
  </section>
  <script src="/js/script.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const body = document.body;

      // Remove 'loading' class after window load
      window.addEventListener('load', () => {
        body.classList.remove('loading');
      });
    });
  </script>
</body>

</html>
