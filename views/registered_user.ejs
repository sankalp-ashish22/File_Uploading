    overflow-x: auto;
}

.content main .data-bottom .header{
    display: flex;
    align-items: center;
    grid-gap: 16px;
    margin-bottom: 24px;
}

.content main .data-bottom .header h3{
    margin-right: auto;
    font-size: 24px;
    font-weight: 600;
}

.content main .data-bottom .header .bx{
