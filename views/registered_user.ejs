function openDownloadModal(userId) {
    const modal = document.getElementById('downloadModal');

    fetch(`/admin/registered_user/${userId}/downloaded_blogs`)
        .then(response => response.json())
        .then(data => {
            const downloadedBlogsContainer = document.getElementById('downloadedBlogsContainer');
            downloadedBlogsContainer.innerHTML = ''; // Clear previous content
            data.forEach(download => {
                const blogDiv = document.createElement('div');
                blogDiv.classList.add('blog-item');
                blogDiv.setAttribute('data-id', download.blogId);
                
                const titleElement = document.createElement('h3');
                titleElement.innerHTML = `<strong>${download.blogTitle}</strong>`; // Bold title
               
                const timestampElement = document.createElement('p');
                const timestamp = new Date(download.timestamp).toLocaleString(); // Format timestamp
                timestampElement.textContent = `- Downloaded on: ${timestamp}`;

                const downloadButton = document.createElement('button');
                downloadButton.textContent = 'Download';
                downloadButton.classList.add('btn', 'btn-success', 'download-button'); // Add button styles
                downloadButton.addEventListener('click', () => downloadBlog(download.blogId));

                blogDiv.appendChild(titleElement);
                blogDiv.appendChild(timestampElement);
                blogDiv.appendChild(downloadButton);
                downloadedBlogsContainer.appendChild(blogDiv);

                const hr = document.createElement('hr');
                downloadedBlogsContainer.appendChild(hr);
            });
            modal.style.display = 'block'; // Display the modal

            // Close modal on outside click
            const closeOnOutsideClick = function(event) {
                if (event.target === modal) {
                    modal.style.display = 'none';
                    window.removeEventListener('click', closeOnOutsideClick); // Remove event listener after closing
                }
            };

            // Add event listener to window for outside click
            window.addEventListener('click', closeOnOutsideClick);
        })
        .catch(error => {
            console.error('Error fetching downloaded blogs:', error);
            alert('Failed to fetch downloaded blogs');
        });
}

